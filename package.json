{
  "name": "worker",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "docker:build": "docker build -t livebackup/worker:latest .",
    "docker:run": "docker run -d --network livebackup --env-file=.env --name livebackup_worker livebackup/worker:latest",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "migrate": "node dist/migrate.js",
    "posttest": "npm run lint",
    "premigrate": "npm run rebuild",
    "prestart": "npm run rebuild",
    "pretest": "npm run rebuild",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:fix": "npm run prettier:cli -- --write",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "test": "nyc mocha dist/__tests__"
  },
  "author": "Juan Diego <jdiegopm12@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.0",
    "@types/nodemailer": "^6.4.7",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chai": "^4.3.7",
    "eslint": "^8.40.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.8.0",
    "mocha": "^10.2.0",
    "mocha-suppress-logs": "^0.3.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "redis-memory-server": "^0.6.0",
    "sinon": "^15.0.4",
    "source-map-support": "^0.5.21",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bullmq": "^3.13.1",
    "dotenv": "^16.0.3",
    "nodemailer": "^6.9.1"
  }
}
