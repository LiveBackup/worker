{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "strictPropertyInitialization": false,

    "useUnknownInCatchVariables": false,

    "incremental": true,

    "lib": ["es2020"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2018",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,

    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"]
}
